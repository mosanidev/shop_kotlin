<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <EditText
        android:id="@+id/edit_password_lama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password Lama"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/edit_password_baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_password_lama"
        android:hint="Password Baru"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/edit_konfirmasi_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_password_baru"
        android:hint="Kondirmasi Password"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/edit_konfirmasi_password"
        android:gravity="center">
        <Button
            android:id="@+id/dialogSimpanPassBtn"
            android:text="Simpan"
            android:layout_marginRight="20dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/dialogCancelPassBtn"
            android:text="Cancel"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>